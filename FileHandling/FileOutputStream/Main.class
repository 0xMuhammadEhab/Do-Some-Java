import java.io.*;

public class Main {
    public static void main(String[] args) throws IOException,FileNotFoundException {
        FileOutputStream fos = new FileOutputStream("test.txt"); // The file will be created if it doesn't exist
        fos.write(5); // write 5

        FileInputStream fis = new FileInputStream("test.txt");
        System.out.println(fis.read()); // 5 (read one byte)

        fos.write("ABC".getBytes()); // write() method work with byte and array of bytes
        System.out.println(fis.read()); // 65 => A
        System.out.println((char)fis.read()); // B => casting 66
        fos.flush();
        // to append
        // FileOutputStream fos = new FileOutputStream("test.txt",true);

    }

}
